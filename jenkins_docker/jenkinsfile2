pipeline {
    agent any

    environment {
        // Initialize the initial version tag
        versionTag = '1.0'
        previousTag = ''
        repositoryName = 'alpaca-flask'
        dockerHubUsername = 'noaavisrur'
        newTag = ''
        currentTag = ''
    }

    stages {
        stage('Clean up & clone') {
            steps {
               sh 'sudo rm -rf *'
               sh 'sudo git clone https://github.com/noaavisrur/alpaca-flask.git'
            }
        }
        stage('Build and Push Docker Image') {
            steps {
                // Use the updated version tag in the Docker build command
                    dir('/var/lib/jenkins/workspace/flask_project/alpaca-flask/flask/flask-app') {
                    sh "docker build -t ${dockerHubUsername}/${repositoryName}:latest ."
                    sh "docker push ${dockerHubUsername}/${repositoryName}:latest"
                }
            }
        }
    }
}
